<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div>

<% #@list is generated from the controller
%>
	
<% options = options_from_collection_for_select(@list, 'to_s', 'to_s') %>
<%= f.select :name,  options, :prompt => "Select a Profile" %>
	
<%= 'Or enter new profile' %>
<%= text_field_tag :new_profile_name %>

</div>
<br>
	<div class="field">
	<%= f.text_area :bio %>
	</div>

	<div>
	<%= f.text_field :profileable_type, :type => 'hidden'  %>
	</div>

	<div>
	<%= f.text_field :profileable_id, :type => 'hidden'    %>
	</div>

<div>
	<%= f.label  :made_public_at, "Make Public" %>
	<% strDate = Date.current.to_s %>
	<%= f.check_box :made_public_at, {}, strDate %>
<br>
</div>

	<div hidden="true" class="field">
	<%= f.text_area :user_id, :value => current_user.id %>
	</div>

	<div class="actions">
	<%= f.submit %>
	</div>

<% end %>
