<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div>
	
</div>


<div class="field">
	<%= f.label :name %><br>
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :bio %><br>
	<%= f.text_area :bio %>
</div>

<div>
	<%= f.label  :made_public_at, "Make Public" %>
	<% strDate = Date.current.to_s %>
	<%= f.check_box :made_public_at, {}, strDate %>
<br>
</div>

<div hidden="true" class="field">
	<%= f.text_area :user_id, :value => current_user.id %>
</div>

<div class="actions">
	<%= f.submit %>
</div>

<% end %>
