    <%= f.label :project_id %><br>
    <%= f.number_field :project_id, :value => params[:project_id].to_i %>
  </div>

  <div class="field">
    <%= f.label :solution_abstract %><br>
    <%= f.text_area :solution_abstract, :value => params[:solution_abstract].to_s %>
  </div>

  <div class="field">
    <%= f.datetime_field :published_at, :value => Time.now,:type => "hidden" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
