<div class="text-center">
    <h1>Friends</h1>
  </div>

    <% unless current_user == @user %>
        <%= link_to "Add Friend", friendships_path(:friend_id => @user), :method => :post %>
    <% end %>

    <h4>Friends</h4>
    <ul>
        <% @user.friends.each do |friend| %>
        <li>
          <%= link_to friend.email.first(friend.email.index('@')), friend %>
          <% if current_user == @user %>
            <%= link_to "Remove", friendship_path(:id => friend), :method => :delete %>
          <% end %>
        </li>
      <% end %>
    </ul>

    <% if current_user == @user %>

        <h4>Friend Requests</h4>
        <ul>
            <% @user.requested_friendships.each do |request| %>
            <li>
              <%=  link_to request.email.first(request.email.index('@')), request %>
              <%= link_to "Accept", friendship_path(:id => request.id), :method => "put" %>
              <%= link_to "Decline", friendship_path(:id => request), :method => :delete %>
            </li>
          <% end %>
        </ul>
    <% end %>
