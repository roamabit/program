
<div class="with-margin-top well col-md-6 col-md-offset-3">
  <h2>Change your password</h2>
  <br/>
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9") do |f| %>
    <%= devise_error_messages! %>

    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <div class="col-sm-9 col-sm-offset-3">
      <%= f.submit "Change my password" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
